page {
    background-color: #fff;
}
#main {
    position: relative;
    padding: 0 30rpx 130rpx 30rpx;
}

/* 方案 */
.plan {
    position: relative;
    padding-top: 60rpx;
}
.plan .title {
    position: relative;
    display: flex;
    padding-bottom: 34rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 30rpx; color: #000; font-weight: bold;
    box-sizing: content-box;
}
.plan .title .time {
    position: absolute;
    right: 0;
    font-size: 30rpx; font-weight: normal;
}
.plancon {
    position: relative;
    padding: 0 30rpx 1rpx 30rpx;
    width: 100%; height: auto;
    border-radius: 20rpx;
    box-shadow:0px 20px 60px rgba(147,147,147,0.16);
}
.plancontit {
    height: 94rpx; 
    line-height: 94rpx; text-align: center;
}
.plancontit>text {
    height: 94rpx; 
    line-height: 94rpx;
    font-size: 24rpx;
}
.plancontit>text:nth-of-type(1) {
    float: left;
    margin-left: 20rpx;
}
.plancontit>text:nth-of-type(2) {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
}
.plancontit>text:last-of-type {
    float: right;
    margin-right: 20rpx;
}
.planconlist {
    position: relative;
    margin-bottom: 30rpx;
    width: 100%; height: 80rpx;
    line-height: 80rpx; text-align: center;
    background-color: #F7F8F8;
    border-radius: 20rpx;
}
.planconlist>text {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
}
.planconlist>text:nth-of-type(1) {
    float: left;
    margin-left: 20rpx;
    max-width: 33%;
    font-size: 30rpx; font-weight: bold; text-align: left;
}
.planconlist>text:nth-of-type(2) {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    margin: auto;
}
.planconlist>text:nth-of-type(3) {
    float: right;
    margin-right: 20rpx;
}
/* 方案评价 */
.evaluate .evcontit{
    position: relative;
    padding: 0 20rpx;
    height: 94rpx;
    line-height: 94rpx;
    display: flex;
    justify-content: space-between;
}
.evaluate .evcontit text {
    display: inline-block;
    width: 25%;
    text-align: center;
    font-size: 24rpx;
    white-space: nowrap;
}
.evcontit text:nth-of-type(1) {
    text-align: left;
}
.evcontit text:last-of-type {
    text-align: right;
}

.evconlist {
    position: relative;
    margin-bottom: 30rpx; padding: 0 20rpx;
    width: 100%; height: 80rpx;
    line-height: 80rpx; text-align: center;
    background-color: #F7F8F8;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
}
.evconlist text {
    display: inline-block;
    width: 25%;
    font-size: 24rpx;
    white-space: nowrap;
}
.evconlist text:nth-of-type(1) {
    font-size: 30rpx; font-weight: bold; text-align: left;
}
.evconlist text:last-of-type {
    text-align: right;
}

/* 按钮 */
.btn {
    position: fixed;
    bottom: 40rpx; left: 0; right: 0;
    margin: auto;
    width: 500rpx; height: 80rpx;
    line-height: 80rpx; text-align: center;
    border-radius: 20rpx;
    font-size: 30rpx; color: #fff;
}

/* 分享弹窗 */
.sharePop {
    position: relative;
}
.btnPopCon {
    position: relative;
    height: 132rpx; width: 100%;
}
.btnPop {
    position: absolute;
    top: 0; 
    width: 330rpx !important; height: 80rpx;
    display: flex;
    align-items: center;
    border-radius: 20rpx;
}
.btnPop>image {
    margin: 0 20rpx 0 76rpx;
    width: 40rpx; height: 40rpx;
}
.btnPop>view {
    font-size: 30rpx; color: #fff;
}
.localPop {
    right: 30rpx;
}
.friPop {
    left: 30rpx;
    padding: 0;
    font-weight: normal;
}
.localPop>image {
    margin: 0 20rpx 0 60rpx;
    width: 40rpx; height: 36rpx;
}