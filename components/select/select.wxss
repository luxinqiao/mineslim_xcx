.shade {
	position: fixed; z-index: 99;
	top: 0; bottom: 0; left: 0; right: 0;
	background-color: rgba(51, 51, 51, 0.6);
}

.top {
	position: absolute; z-index: 2;
	top: 0; bottom: 530rpx; left: 0; right: 0;
}

.bottom {
	position: absolute; z-index: 2;
	bottom: 0; left: 0; right: 0;
	height: 530rpx;
	transform: translateY(100%);
}

.title {
	position: absolute; z-index: 1;
	bottom: 430rpx; left: 0; right: 0;
	height: 100rpx;
	background-color: #f8f8f8;
}
.title>text:nth-child(1) {
	position: absolute;
	top: 26rpx; left: 32rpx;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 36rpx;
	color: #333;
}
.title>text:nth-child(2) {
	position: absolute;
	top: 26rpx; left: 200rpx; right: 200rpx;
	height: 50rpx;
	text-align: center; line-height: 50rpx;
	font-size: 36rpx;
	color: #333;
}
.title>text:nth-child(3) {
	position: absolute;
	top: 26rpx; right: 32rpx;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 36rpx;
	color: #5a5ad1;
}

.content {
	position: absolute;
	bottom: 0; left: 0; right: 0;
	height: 430rpx;
	background-color: #fff;
}
.list {
	height: 430rpx;
}
.item {
	line-height: 100rpx;
	text-align: center;
	color: #000;
}

.currSelect {
	position: relative;
	top: -10rpx;
	margin-left: 5%;
	width: 90%; height: 100rpx;
	line-height: 100rpx;
	border-top: 2px solid #d3d3d3; border-bottom: 2px solid #d3d3d3;
	border-image:linear-gradient(to right,white,#5A5AD1,white) 1 10;
}
