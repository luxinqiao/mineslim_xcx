.shade {
	position: fixed; z-index: 99;
	top: 0; bottom: 0; left: 0; right: 0;
	background-color: rgba(51, 51, 51, 0.6);
}

.top {
	position: absolute; z-index: 2;
	top: 0; bottom: 990rpx; left: 0; right: 0;
}

.bottom {
	position: absolute; z-index: 2;
	bottom: 0; left: 0; right: 0;
	height: 990rpx;
	transform: translateY(100%);
	background-color: #fff;
	border-radius: 40rpx 40rpx 0 0;
}

.title {
	position: absolute;
	top: 60rpx; left: 0; right: 0;
	height: 50rpx;
	text-align: center; line-height: 50rpx;
	font-weight: bold; font-size: 36rpx;
}

.search {
	position: absolute;
	top: 170rpx; left: 30rpx;
	width: 690rpx; height: 100rpx;
	border-radius: 20rpx;
	background-color: #f8f8f8;
}
.search>input {
	position: absolute;
	top: 0; left: 20rpx;
	width: 452rpx; height: 100rpx;
	line-height: 100rpx;
	font-size: 24rpx;
	color: #333;
}
.search>text:last-child::before {
	display: block;
	content: '';
	position: absolute;
	top: 28rpx; right: 198rpx;
	width: 2rpx; height: 42rpx;
	background-color: #d4d4d4;
}
.search>text:last-child {
	position: absolute;
	top: 0; right: 0;
	width: 198rpx; height: 100rpx;
	text-align: center; line-height: 100rpx;
	font-size: 30rpx; font-weight: bold;
}

.mark {
	position: absolute;
	top: 266rpx; left: 50rpx;
    width: 0; height: 0;
    border: 20rpx solid; border-color: transparent transparent #f8f8f8;
}
.content {
	position: absolute;
	top: 294rpx; left: 30rpx;
	width: 690rpx; max-height: 666rpx;
	border-radius: 20rpx;
	background-color: #f8f8f8;
}
.contentItem {
	margin: 0 32rpx;
	height: 104rpx;
	line-height: 104rpx;
	border-bottom: 2rpx solid #d4d4d4;
	font-size: 24rpx;
	color: #333;
}
.contentItem:last-child {
	border-bottom: none;
}

.noData {
	position: absolute;
	top: 318rpx; left: 46rpx;
	font-size: 24rpx;
	color: #333;
}

.color_main {
	color: #5A5AD1;
}